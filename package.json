{
  "name": "@turquoisebay/openclaw-mqtt",
  "version": "0.1.0",
  "description": "MQTT channel plugin for OpenClaw - bidirectional messaging via MQTT brokers",
  "type": "module",
  "main": "index.ts",
  "keywords": [
    "openclaw",
    "mqtt",
    "iot",
    "channel",
    "plugin",
    "home-assistant",
    "mosquitto"
  ],
  "author": "Hugh Madden",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "turq@10.0.20.9:/opt/git/openclaw-mqtt.git"
  },
  "openclaw": {
    "extensions": [
      "./index.ts"
    ],
    "channel": {
      "id": "mqtt",
      "label": "MQTT",
      "selectionLabel": "MQTT (IoT/Home Automation)",
      "docsPath": "/channels/mqtt",
      "docsLabel": "mqtt",
      "blurb": "Bidirectional messaging via MQTT brokers (Mosquitto, EMQX, etc.)",
      "order": 80
    },
    "install": {
      "npmSpec": "@hughmadden/openclaw-mqtt",
      "localPath": "extensions/mqtt",
      "defaultChoice": "npm"
    }
  },
  "dependencies": {
    "mqtt": "5.10.3",
    "zod": "3.24.2"
  },
  "devDependencies": {
    "typescript": "5.7.3",
    "vitest": "2.1.9",
    "@types/node": "22.13.1"
  },
  "peerDependencies": {
    "openclaw": ">=2026.1.0"
  },
  "peerDependenciesMeta": {
    "openclaw": {
      "optional": true
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  }
}
